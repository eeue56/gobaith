{
  "name": "gobaith",
  "version": "2.0.0",
  "description": "",
  "main": "main.js",
  "dependencies": {
    "@eeue56/coed": "^0.4.0"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@eeue56/gweld": "^1.1.2",
    "@playwright/test": "~1.54.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/serviceworker": "^0.0.141",
    "electron": "^39.1.1",
    "esbuild": "^0.25.8",
    "express": "^5.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "serve-backend": "npm run build && ts-node server/host.ts",
    "serve-frontend": "npx @eeue56/gweld web/ 8000",
    "build": "esbuild --bundle src/index.ts --outfile=web/out.js && esbuild --bundle src/service-worker.ts --outfile=web/service-worker.js --minify",
    "build-electron": "cd electron && npm run build",
    "test": "tsc --noEmit && npx playwright test",
    "test-electron": "IS_ELECTRON=true npx playwright test --workers=1",
    "test-android": "IS_ANDROID=true npx playwright test --workers=1 --project 'chromium - system time'",
    "test-web": "npm run test && npm run test-electron",
    "test-everything": "npm run test-web && npm run test-android",
    "generate": "ts-node src/utils/data.ts",
    "generate-screenshots": "ts-node screenshots/generate_screenshots.ts",
    "generate-android-screenshots": "IS_ANDROID=true ts-node screenshots/generate_screenshots.ts",
    "prepare-android": "npm run build && npx cap copy android",
    "run-android": "npx cap run android",
    "run-electron": "cd electron && npm start"
  },
  "engines": {
    "node": "24.x"
  },
  "author": "eeue56",
  "license": "AGPL-3.0-only"
}
